<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_prefs_title"
    android:key="status_bar_prefs">

    <PreferenceCategory
            android:key="general_status_bar_category"
            android:title="General settings">

        <CheckBoxPreference
            android:key="hide_battery"
            android:title="@string/hide_battery_title"
            android:summaryOn="@string/hide_battery_summary_on"
            android:summaryOff="@string/hide_battery_summary_off"
            android:disableDependentsState="true"
        />

        <CheckBoxPreference
            android:key="battery_percentages"
            android:title="@string/battery_percent_title"
            android:summaryOn="@string/battery_percent_summary_on"
            android:summaryOff="@string/battery_percent_summary_off"
            android:dependency="hide_battery"
        />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="battery_bar_category"
        android:title="@string/battery_bar_category_title">

        <ListPreference
            android:key="battery_bar"
            android:title="@string/battery_bar_title"
            android:entries="@array/battery_bar_entries"
            android:entryValues="@array/battery_bar_values"
        />

        <ListPreference
            android:key="battery_bar_style"
            android:title="@string/battery_bar_style_title"
            android:entries="@array/battery_bar_style_entries"
            android:entryValues="@array/battery_bar_style_values"
        />

        <CheckBoxPreference
            android:key="battery_bar_animate"
            android:title="@string/battery_bar_animate_title"
        />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="battery_bar_color"
            android:title="@string/battery_bar_color_title"
            android:defaultValue="#FFFFFF"
        />

        <ListPreference
            android:key="battery_bar_thickness"
            android:title="@string/battery_bar_thickness_title"
            android:entries="@array/battery_bar_thickness_entries"
            android:entryValues="@array/battery_bar_thickness_values"
        />  
    </PreferenceCategory>

    <PreferenceCategory
            android:key="clock_category"
            android:title="Clock settings">
        <ListPreference
            android:key="clock_style"
            android:entries="@array/clock_entries"
            android:entryValues="@array/clock_values"
            android:title="@string/clock_style_title" />

        <ListPreference
            android:key="clock_am_pm"
            android:entries="@array/am_pm_entries"
            android:entryValues="@array/am_pm_values"
            android:title="@string/am_pm_style_title"
        />
    </PreferenceCategory>
</PreferenceScreen>
